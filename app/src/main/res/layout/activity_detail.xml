<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.museum2015.electionprediction.DetailActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/stateText"
        android:fontFamily="sans-serif-condensed"
        android:textSize="26sp"
        android:typeface="serif"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stateText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/candidate1"
        android:textSize="18sp"
        android:typeface="serif"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/party1"
        android:textSize="16sp"
        android:layout_below="@+id/candidate1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/probability1"
        android:textSize="16sp"
        android:layout_below="@+id/party1"
        android:layout_alignLeft="@+id/party1"
        android:layout_alignStart="@+id/party1"
        android:layout_marginTop="19dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/candidate2"
        android:textSize="18sp"
        android:typeface="serif"
        android:textStyle="normal|bold"
        android:layout_below="@+id/probability1"
        android:layout_alignLeft="@+id/candidate1"
        android:layout_alignStart="@+id/candidate1"
        android:layout_marginTop="26dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/candidate2"
        android:layout_alignRight="@+id/probability1"
        android:layout_alignEnd="@+id/probability1"
        android:layout_marginTop="18dp"
        android:id="@+id/party2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/party2"
        android:layout_alignLeft="@+id/party2"
        android:layout_alignStart="@+id/party2"
        android:layout_marginTop="19dp"
        android:id="@+id/probability2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/candidate3"
        android:textSize="18sp"
        android:typeface="serif"
        android:textStyle="normal|bold"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/probability2"
        android:layout_alignLeft="@+id/candidate2"
        android:layout_alignStart="@+id/candidate2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/candidate3"
        android:layout_alignRight="@+id/probability2"
        android:layout_alignEnd="@+id/probability2"
        android:layout_marginTop="17dp"
        android:id="@+id/party3" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/party3"
        android:layout_alignRight="@+id/party3"
        android:layout_alignEnd="@+id/party3"
        android:layout_marginTop="18dp"
        android:id="@+id/probability3" />

</RelativeLayout>
